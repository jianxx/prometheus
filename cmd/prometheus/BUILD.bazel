load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "prometheus_lib",
    srcs = ["main.go"],
    importpath = "github.com/prometheus/prometheus/cmd/prometheus",
    visibility = ["//visibility:private"],
    deps = [
        "//config",
        "//discovery",
        "//discovery/install",
        "//notifier",
        "//pkg/exemplar",
        "//pkg/labels",
        "//pkg/logging",
        "//pkg/relabel",
        "//pkg/runtime",
        "//promql",
        "//rules",
        "//scrape",
        "//storage",
        "//storage/remote",
        "//tsdb",
        "//util/strutil",
        "//web",
        "@com_github_alecthomas_units//:units",
        "@com_github_go_kit_log//:log",
        "@com_github_go_kit_log//level",
        "@com_github_mwitkow_go_conntrack//:go-conntrack",
        "@com_github_oklog_run//:run",
        "@com_github_opentracing_opentracing_go//:opentracing-go",
        "@com_github_pkg_errors//:errors",
        "@com_github_prometheus_client_golang//prometheus",
        "@com_github_prometheus_common//model",
        "@com_github_prometheus_common//promlog",
        "@com_github_prometheus_common//promlog/flag",
        "@com_github_prometheus_common//version",
        "@com_github_prometheus_exporter_toolkit//web",
        "@com_github_prometheus_exporter_toolkit//web/kingpinflag",
        "@com_github_uber_jaeger_client_go//config",
        "@com_github_uber_jaeger_lib//metrics/prometheus",
        "@in_gopkg_alecthomas_kingpin_v2//:kingpin_v2",
        "@io_k8s_klog//:klog",
        "@io_k8s_klog_v2//:klog",
        "@org_uber_go_atomic//:atomic",
    ],
