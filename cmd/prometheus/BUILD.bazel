go_binary(
    name = "prometheus",
    embed = [":prometheus_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "prometheus_test",
    srcs = [
        "main_test.go",
        "main_unix_test.go",
        "query_log_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":prometheus_lib"],
    deps = [
        "//notifier",
        "//pkg/labels",
        "//rules",
        "@com_github_go_kit_log//:log",
        "@com_github_prometheus_client_golang//prometheus",
